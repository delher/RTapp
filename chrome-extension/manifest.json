{
  "manifest_version": 3,
  "name": "RTool - Multi-Window Prompter",
  "version": "1.0.0",
  "description": "Multi-instance web automation tool with Parseltongue transforms",
  "permissions": [
    "tabs",
    "scripting",
    "storage"
  ],
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "RTool - Click to open control panel"
  },
  "content_scripts": [
    {
      "matches": [
        "https://chatgpt.com/*",
        "https://*.chatgpt.com/*",
        "https://gemini.google.com/*",
        "https://claude.ai/*",
        "https://grok.x.com/*",
        "https://x.com/i/grok/*"
      ],
      "js": [
        "site-configs.js",
        "content-extraction.js",
        "gemini-extraction.js",
        "content.js"
      ],
      "run_at": "document_end",
      "all_frames": false
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["site-configs.js", "gemini-extraction.js"],
      "matches": ["<all_urls>"]
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}

